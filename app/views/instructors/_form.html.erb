<% if @instructor.errors.any? %>
  <h3>Please correct the following errors:</h3>
  <ul>
    <% @instructor.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @instructor do |f| %>

  <%= f.label :name %> <br>
  <%= f.text_field :name %>
  <br>

  <%= f.label :gym %> <br>
  <%= f.text_field :gym %>
  <br>

  <%= f.label :specialty %> <br>
  <%= f.text_area :specialty %>
  <br>
  <br>
  <%= f.submit %>

<% end %>
